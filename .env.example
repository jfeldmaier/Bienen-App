# BeeHiveTracker Environment Configuration
# Kopiere diese Datei nach .env und passe die Werte an

# Flask Environment (development/production)
FLASK_ENV=production

# Debug Mode (True nur für Development!)
DEBUG=False

# Secret Key für Sessions (generiere mit: python -c "import secrets; print(secrets.token_hex(32))")
# In Production wird automatisch aus secret_key.txt gelesen
# SECRET_KEY=your-secret-key-here

# Database Configuration
# Absoluter Pfad zum var/app-instance Verzeichnis
DATABASE_PATH=/home/jos/BeeHiveTracker/var/app-instance

# Upload Configuration
# Pfad für Inspektions-Fotos
UPLOAD_FOLDER=/home/jos/BeeHiveTracker/var/uploads

# Server Configuration
# Host und Port für Gunicorn (0.0.0.0 für externen Zugriff, 127.0.0.1 nur lokal)
SERVER_HOST=127.0.0.1
SERVER_PORT=5000

# Gunicorn Workers (Empfehlung: 2 * CPU_CORES + 1)
GUNICORN_WORKERS=4

# Security Settings
# SESSION_COOKIE_SECURE sollte in Production mit HTTPS auf True gesetzt werden
SESSION_COOKIE_SECURE=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/beehivetracker/app.log
ACCESS_LOG=/var/log/beehivetracker/access.log
ERROR_LOG=/var/log/beehivetracker/error.log

# Cloudflare Tunnel (optional)
# CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token-here
